<Window x:Class="SendImageToServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendImageToServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid  >
        <ListView x:Name="ImageList" Background="GreenYellow">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Background="Blue">
                        <Image Width="200" Height="200" Stretch="Fill" Source="{Binding Something}" ></Image>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
                
           
            
        </ListView>
        
    </Grid>
</Window>
